{% comment %}
  Product List Option 2 - Tabbed Collections
  Displays products from multiple collections with tab navigation
{% endcomment %}

<section class="product-list-tabs-section" data-section-id="{{ section.id }}">
  <div class="product-list-tabs-container">

    {%- comment -%} Section Header {%- endcomment -%}
    <div class="product-list-tabs-header header-align-{{ section.settings.header_alignment }}">
      {% if section.settings.heading != blank %}
        <h2 class="product-list-tabs-heading">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>

    {%- comment -%} Tab Navigation {%- endcomment -%}
    <div class="tabs-navigation">
      {% for block in section.blocks %}
        <button
          class="tab-button {% if forloop.first %}active{% endif %}"
          data-tab="{{ block.id }}"
          {{ block.shopify_attributes }}>
          {{ block.settings.tab_label }}
        </button>
      {% endfor %}
    </div>

    {%- comment -%} Tab Content {%- endcomment -%}
    {% for block in section.blocks %}
      <div class="tab-content {% if forloop.first %}active{% endif %}" data-content="{{ block.id }}">
        {% if block.settings.collection != blank %}
          <div class="product-list-tabs-grid">
            {% for product in block.settings.collection.products limit: section.settings.products_to_show %}
              <div class="product-tabs-card" data-product-id="{{ product.id }}">

                {%- comment -%} Main Product Image {%- endcomment -%}
                <div class="product-tabs-card-media">
                  <a href="{{ product.url }}" class="product-tabs-card-link">
                    {% if product.featured_image != blank %}
                      <img
                        src="{{ product.featured_image | image_url: width: 600 }}"
                        alt="{{ product.featured_image.alt | escape }}"
                        class="product-tabs-card-image main-tabs-image"
                        loading="lazy"
                        width="300"
                        height="300"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'product-tabs-card-image placeholder-svg' }}
                    {% endif %}
                  </a>

                  {%- comment -%} Sale Badge {%- endcomment -%}
                  {% if product.compare_at_price > product.price %}
                    <span class="sale-tabs-badge">Sale</span>
                  {% endif %}
                </div>

                {%- comment -%} Image Thumbnails {%- endcomment -%}
                {% if product.images.size > 1 %}
                  <div class="product-tabs-thumbnails">
                    {% for image in product.images %}
                      <div class="thumbnail-tabs-item {% if forloop.first %}active{% endif %}"
                           data-index="{{ forloop.index0 }}"
                           data-image-url="{{ image | image_url: width: 600 }}"
                           data-image-alt="{{ image.alt | escape }}">
                        <img
                          src="{{ image | image_url: width: 100 }}"
                          alt="{{ image.alt | escape }}"
                          loading="lazy"
                          width="50"
                          height="50"
                        >
                      </div>
                    {% endfor %}
                  </div>
                {% endif %}

                {%- comment -%} Product Info {%- endcomment -%}
                <div class="product-tabs-card-info">
                  <a href="{{ product.url }}" class="product-tabs-title">
                    {{ product.title }}
                  </a>

                  <span class="product-tabs-type">
                    {{ product.type | upcase }}
                  </span>

                  <div class="product-tabs-price">
                    {% if product.compare_at_price > product.price %}
                      <span class="price-tabs-sale">{{ product.price | money }}</span>
                      <span class="price-tabs-compare">{{ product.compare_at_price | money }}</span>
                    {% else %}
                      <span class="price-tabs-regular">{{ product.price | money }}</span>
                    {% endif %}
                  </div>
                </div>

                {%- comment -%} Add to Cart Button {%- endcomment -%}
                <div class="product-tabs-card-actions">
                  {% form 'product', product, class: 'product-tabs-form' %}
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    <input type="hidden" name="quantity" value="1">

                    <button
                      type="submit"
                      name="add"
                      class="add-to-cart-tabs-btn"
                      {% unless product.available %}disabled{% endunless %}
                    >
                      <svg class="cart-tabs-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="9" cy="21" r="1"/>
                        <circle cx="20" cy="21" r="1"/>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                      </svg>
                      {% if product.available %}
                        {{ section.settings.add_to_cart_text }}
                      {% else %}
                        SOLD OUT
                      {% endif %}
                    </button>
                  {% endform %}
                </div>
              </div>
            {% endfor %}
          </div>

          {%- comment -%} View All Button {%- endcomment -%}
          {% if section.settings.show_view_all and block.settings.collection != blank %}
            <div class="view-all-tabs-container">
              <a href="{{ block.settings.collection.url }}" class="view-all-tabs-btn">
                View All
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          {% endif %}
        {% else %}
          <div class="no-collection-tabs-message">
            <p>Please select a collection for this tab in the theme editor.</p>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!section) return;

    // Tab switching functionality
    const tabButtons = section.querySelectorAll('.tab-button');
    const tabContents = section.querySelectorAll('.tab-content');

    tabButtons.forEach(button => {
      button.addEventListener('click', function() {
        const tabId = this.dataset.tab;

        // Remove active class from all buttons and contents
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabContents.forEach(content => content.classList.remove('active'));

        // Add active class to clicked button and corresponding content
        this.classList.add('active');
        const targetContent = section.querySelector(`[data-content="${tabId}"]`);
        if (targetContent) {
          targetContent.classList.add('active');
        }
      });
    });

    // Image cycling functionality for each product card
    const productCards = section.querySelectorAll('.product-tabs-card');

    productCards.forEach(card => {
      const thumbnails = card.querySelectorAll('.thumbnail-tabs-item');
      const thumbnailContainer = card.querySelector('.product-tabs-thumbnails');
      const mainImage = card.querySelector('.main-tabs-image');
      const mainImageLink = card.querySelector('.product-tabs-card-link');
      let currentIndex = 0;

      if (thumbnails.length === 0) return;

      function updateImage(index) {
        // Ensure index wraps around
        if (index >= thumbnails.length) {
          currentIndex = 0;
        } else if (index < 0) {
          currentIndex = thumbnails.length - 1;
        } else {
          currentIndex = index;
        }

        // Update active state on thumbnails
        thumbnails.forEach(t => t.classList.remove('active'));
        thumbnails[currentIndex].classList.add('active');

        // Update main image
        if (mainImage) {
          mainImage.src = thumbnails[currentIndex].dataset.imageUrl;
          mainImage.alt = thumbnails[currentIndex].dataset.imageAlt || '';
        }

        // Center the active thumbnail within its container
        if (thumbnailContainer && thumbnails[currentIndex]) {
          var thumb = thumbnails[currentIndex];
          thumbnailContainer.scrollLeft = thumb.offsetLeft - thumbnailContainer.offsetWidth / 2 + thumb.offsetWidth / 2;
        }
      }



      // Click on thumbnail to select specific image
      thumbnails.forEach((thumb, index) => {
        thumb.addEventListener('click', function(e) {
          e.stopPropagation();
          updateImage(index);
        });
      });

      // Initialize
      updateImage(0);
    });
  });
</script>

