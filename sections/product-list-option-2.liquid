<style>
  .product-list-tabs-section {
    --heading-color: {{ section.settings.heading_color }};
    --tab-text-color: {{ section.settings.tab_text_color }};
    --tab-active-color: {{ section.settings.tab_active_color }};
    --card-background: {{ section.settings.card_background }};
    --price-color: {{ section.settings.price_color }};
    --sale-price-color: {{ section.settings.sale_price_color }};
    --compare-price-color: {{ section.settings.compare_price_color }};
    --product-type-color: {{ section.settings.product_type_color }};
    --button-background: {{ section.settings.button_background }};
    --button-text: {{ section.settings.button_text }};

    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .product-list-tabs-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Header Styles */
  .product-list-tabs-header {
    margin-bottom: 30px;
  }

  .header-align-left {
    text-align: left;
  }

  .header-align-center {
    text-align: center;
  }

  .header-align-right {
    text-align: right;
  }

  .product-list-tabs-heading {
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 700;
    color: var(--heading-color);
    margin: 0;
    letter-spacing: -0.02em;
    text-transform: uppercase;
  }

  /* Tab Navigation */
  .tabs-navigation {
    display: flex;
    gap: 40px;
    justify-content: center;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .tab-button {
    background: none;
    border: none;
    padding: 10px 0;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--tab-text-color);
    cursor: pointer;
    position: relative;
    transition: color 0.3s ease;
  }

  .tab-button::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--tab-active-color);
    transition: width 0.3s ease;
  }

  .tab-button:hover,
  .tab-button.active {
    color: var(--tab-active-color);
  }

  .tab-button.active::after {
    width: 100%;
  }

  /* Tab Content */
  .tab-content {
    display: none;
  }

  .tab-content.active {
    display: block;
  }

  /* View All Button Container */
  .view-all-tabs-container {
    text-align: center;
    margin-top: 40px;
  }

  .view-all-tabs-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    border-bottom: 2px solid var(--button-background);
    padding-bottom: 6px;
    color: var(--button-background);
    text-decoration: none;
    transition: color 0.3s ease, border-color 0.3s ease;
  }

  .view-all-tabs-btn:hover {
    opacity: 0.8;
  }

  .view-all-tabs-btn svg {
    transition: transform 0.3s ease;
  }

  .view-all-tabs-btn:hover svg {
    transform: translateX(4px);
  }

  /* Products Grid */
  .product-list-tabs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 24px;
    max-width: 100%;
  }

  @media screen and (min-width: 769px) {
    .product-list-tabs-grid {
      grid-template-columns: repeat({{ section.settings.desktop_columns }}, 1fr);
    }
  }

  /* Product Card */
  .product-tabs-card {
    background: var(--card-background);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .product-tabs-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
  }

  /* Product Media */
  .product-tabs-card-media {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: #f8f8f8;
  }

  .product-tabs-card-link {
    display: block;
    width: 100%;
    height: 100%;
  }

  .product-tabs-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .product-tabs-card:hover .product-tabs-card-image {
    transform: scale(1.05);
  }

  .placeholder-svg {
    width: 100%;
    height: 100%;
  }

  /* Sale Badge */
  .sale-tabs-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: #ff4757;
    color: white;
    font-size: 11px;
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    z-index: 2;
  }

  /* Thumbnails */
  .product-tabs-thumbnails {
    display: flex;
    gap: 8px;
    padding: 12px 16px;
    padding-right: calc(50% + 16px);
    background: white;
    justify-content: flex-start;
    overflow-x: auto;
    scrollbar-width: none;
  }

  .product-tabs-thumbnails::-webkit-scrollbar {
    display: none;
  }

  .thumbnail-tabs-item {
    flex-shrink: 0;
    width: 44px;
    height: 44px;
    border-radius: 8px;
    border: 2px solid transparent;
    background: #f5f5f5;
    cursor: pointer;
    padding: 4px;
    transition: all 0.2s ease;
    overflow: hidden;
  }

  .thumbnail-tabs-item:hover {
    border-color: #ddd;
    transform: scale(1.05);
  }

  .thumbnail-tabs-item.active {
    border-color: var(--button-background);
    background: white;
  }

  .thumbnail-tabs-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Product Info */
  .product-tabs-card-info {
    padding: 16px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .product-tabs-title {
    font-size: 15px;
    font-weight: 600;
    color: var(--heading-color);
    text-decoration: none;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.2s ease;
  }

  .product-tabs-title:hover {
    color: var(--product-type-color);
  }

  .product-tabs-type {
    font-size: 11px;
    font-weight: 600;
    color: var(--product-type-color);
    letter-spacing: 0.08em;
  }

  .product-tabs-price {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-top: 4px;
  }

  .price-tabs-regular,
  .price-tabs-sale {
    font-size: 18px;
    font-weight: 700;
    color: var(--price-color);
  }

  .price-tabs-compare {
    font-size: 14px;
    color: var(--compare-price-color);
    text-decoration: line-through;
  }

  /* Add to Cart Button */
  .product-tabs-card-actions {
    padding: 0 16px 16px;
  }

  .product-tabs-form {
    width: 100%;
  }

  .add-to-cart-tabs-btn {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 14px 20px;
    background: var(--button-background);
    color: var(--button-text);
    border: none;
    border-radius: 10px;
    font-size: {{ section.settings.add_to_cart_font_size }}px;
    font-weight: 700;
    letter-spacing: 0.08em;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .add-to-cart-tabs-btn:hover:not(:disabled) {
    background: var(--product-type-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(92, 155, 221, 0.3);
  }

  .add-to-cart-tabs-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .cart-tabs-icon {
    width: 18px;
    height: 18px;
  }

  /* No Collection Message */
  .no-collection-tabs-message {
    text-align: center;
    padding: 60px 20px;
    color: var(--tab-text-color);
    font-size: 16px;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .product-list-tabs-grid {
      grid-template-columns: repeat({{ section.settings.mobile_columns }}, 1fr);
      gap: 16px;
    }

    .product-list-tabs-heading {
      font-size: 28px;
    }

    .tabs-navigation {
      gap: 20px;
    }

    .tab-button {
      font-size: 13px;
    }

    .thumbnail-tabs-item {
      width: 36px;
      height: 36px;
    }

    .product-tabs-card-info {
      padding: 12px;
    }

    .product-tabs-title {
      font-size: 14px;
    }

    .price-tabs-regular,
    .price-tabs-sale {
      font-size: 16px;
    }

    .add-to-cart-tabs-btn {
      padding: 12px 16px;
    }
  }

  @media screen and (max-width: 480px) {
    .product-list-tabs-container {
      padding: 0 12px;
    }

    .product-list-tabs-grid {
      gap: 12px;
    }

    .product-tabs-card-media {
      aspect-ratio: 1;
    }

    .sale-tabs-badge {
      font-size: 10px;
      padding: 3px 8px;
      top: 8px;
      left: 8px;
    }

    .product-tabs-thumbnails {
      padding: 8px 10px;
      gap: 6px;
    }

    .thumbnail-tabs-item {
      width: 32px;
      height: 32px;
    }

    .product-tabs-card-info {
      padding: 10px;
    }

    .product-tabs-title {
      font-size: 13px;
    }

    .product-tabs-type {
      font-size: 10px;
    }

    .price-tabs-regular,
    .price-tabs-sale {
      font-size: 15px;
    }

    .price-tabs-compare {
      font-size: 12px;
    }

    .product-tabs-card-actions {
      padding: 0 10px 10px;
    }

    .add-to-cart-tabs-btn {
      padding: 10px 12px;
      border-radius: 8px;
    }

    .cart-tabs-icon {
      width: 14px;
      height: 14px;
    }
  }
</style>
