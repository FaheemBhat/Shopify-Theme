{% comment %}
  Newsletter signup section
{% endcomment %}

<section class="newsletter-section" style="
  --nl-bg: {{ section.settings.background_color }};
  --nl-text: {{ section.settings.text_color }};
  --nl-heading: {{ section.settings.heading_color }};
  --nl-btn-bg: {{ section.settings.button_color }};
  --nl-btn-text: {{ section.settings.button_text_color }};
">
  <div class="newsletter-container">
    {% if section.settings.heading != blank %}
      <h2 class="newsletter-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="newsletter-subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    {%- form 'customer', class: 'newsletter-form' -%}
      <input type="hidden" name="contact[tags]" value="newsletter">

      {%- if form.posted_successfully? -%}
        <p class="newsletter-success">{{ 'newsletter.success' | t | default: 'Thank you for subscribing!' }}</p>
      {%- endif -%}

      {%- if form.errors -%}
        <p class="newsletter-error">{{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}</p>
      {%- endif -%}

      <div class="newsletter-input-group">
        <label for="newsletter-email" class="visually-hidden">{{ 'newsletter.email_label' | t | default: 'Email address' }}</label>
        <input
          type="email"
          name="contact[email]"
          id="newsletter-email"
          class="newsletter-input"
          placeholder="{{ section.settings.placeholder | default: 'Enter your email address' }}"
          required
          autocomplete="email"
        >
        <button type="submit" class="newsletter-btn">
          {{ section.settings.button_text | default: 'Subscribe' }}
        </button>
      </div>
    {%- endform -%}
  </div>
</section>

<style>
  .newsletter-section {
    background: var(--nl-bg, #f9f9f9);
    padding: 60px 20px;
    text-align: center;
  }

  .newsletter-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .newsletter-heading {
    font-size: 28px;
    font-weight: 600;
    color: var(--nl-heading, #1a1a2e);
    margin: 0 0 12px;
  }

  .newsletter-subheading {
    font-size: 15px;
    color: var(--nl-text, #666);
    margin: 0 0 28px;
    line-height: 1.6;
  }

  .newsletter-input-group {
    display: flex;
    gap: 8px;
    max-width: 480px;
    margin: 0 auto;
  }

  .newsletter-input {
    flex: 1;
    padding: 14px 20px;
    border: 1px solid #ddd;
    border-radius: 30px;
    font-size: 15px;
    font-family: inherit;
    color: #333;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--nl-btn-bg, #4A90D9);
    box-shadow: 0 0 0 3px rgba(74, 144, 217, 0.15);
  }

  .newsletter-btn {
    padding: 14px 28px;
    background: var(--nl-btn-bg, #4A90D9);
    color: var(--nl-btn-text, white);
    border: none;
    border-radius: 30px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    white-space: nowrap;
    transition: opacity 0.2s;
    font-family: inherit;
  }

  .newsletter-btn:hover {
    opacity: 0.9;
  }

  .newsletter-success {
    color: #008000;
    font-size: 14px;
    margin-bottom: 12px;
  }

  .newsletter-error {
    color: #cc0000;
    font-size: 14px;
    margin-bottom: 12px;
  }

  .newsletter-section .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0,0,0,0);
    border: 0;
  }

  @media (max-width: 480px) {
    .newsletter-input-group {
      flex-direction: column;
    }

    .newsletter-heading {
      font-size: 24px;
    }
  }
</style>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Get the latest updates, exclusive offers, and more delivered to your inbox."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email placeholder",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Subscribe"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#1a1a2e"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#4A90D9"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
