{% comment %}
  Rich Text Section
  Displays heading and rich text content with customizable styling
{% endcomment %}

<section class="rich-text-section" data-section-id="{{ section.id }}">
  <div class="rich-text-container">
    <div class="rich-text-content">
      
      {% if section.settings.heading != blank %}
        <h2 class="rich-text-heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="rich-text-body">
          {{ section.settings.text }}
        </div>
      {% endif %}

    </div>
  </div>
</section>

<style>
  .rich-text-section {
    --text-color: {{ section.settings.text_color }};
    --heading-color: {{ section.settings.heading_color }};
    --bg-color: {{ section.settings.background_color }};
    --content-width: {{ section.settings.content_width }}%;
    --text-size: {{ section.settings.text_size }}px;
    --heading-size: {{ section.settings.heading_size }}px;
    --text-align: {{ section.settings.text_alignment }};

    background-color: var(--bg-color);
    padding: {{ section.settings.section_padding }}px 0;
  }

  .rich-text-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .rich-text-content {
    width: var(--content-width);
    max-width: 100%;
    margin: 0 auto;
    text-align: var(--text-align);
  }

  .rich-text-heading {
    font-size: var(--heading-size);
    font-weight: 700;
    color: var(--heading-color);
    margin: 0 0 5px;
    line-height: 1.3;
  }

  .rich-text-body {
    font-size: var(--text-size);
    color: var(--text-color);
    line-height: 1.7;
  }

  .rich-text-body p {
    margin: 0 0 1em;
  }

  .rich-text-body p:last-child {
    margin-bottom: 0;
  }

  .rich-text-body strong,
  .rich-text-body b {
    font-weight: 700;
  }

  .rich-text-body em,
  .rich-text-body i {
    font-style: italic;
  }

  .rich-text-body a {
    color: var(--heading-color);
    text-decoration: underline;
    transition: opacity 0.2s ease;
  }

  .rich-text-body a:hover {
    opacity: 0.7;
  }

  .rich-text-body ul,
  .rich-text-body ol {
    margin: 0 0 1em;
    padding-left: 1.5em;
    {% if section.settings.text_alignment == 'center' %}
      text-align: left;
      display: inline-block;
    {% elsif section.settings.text_alignment == 'right' %}
      text-align: left;
      display: inline-block;
    {% endif %}
  }

  .rich-text-body ul {
    list-style-type: disc;
  }

  .rich-text-body ol {
    list-style-type: decimal;
  }

  .rich-text-body li {
    margin-bottom: 0.5em;
  }

  .rich-text-body li:last-child {
    margin-bottom: 0;
  }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .rich-text-container {
      padding: 0 20px;
    }

    .rich-text-content {
      width: 100%;
    }

    .rich-text-heading {
      font-size: calc(var(--heading-size) * 0.8);
    }

    .rich-text-body {
      font-size: calc(var(--text-size) * 0.95);
    }
  }

  @media screen and (max-width: 480px) {
    .rich-text-container {
      padding: 0 16px;
    }

    .rich-text-heading {
      font-size: calc(var(--heading-size) * 0.7);
      margin-bottom: 16px;
    }
  }
</style>

{% schema %}
{
  "name": "Rich text",
  "tag": "section",
  "class": "rich-text-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p> text </p>"
    },
    {
      "type": "text_alignment",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_width",
      "label": "Content width",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 60
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 15
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "min": 20,
      "max": 48,
      "step": 2,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 30
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Rich text"
    }
  ]
}
{% endschema %}
