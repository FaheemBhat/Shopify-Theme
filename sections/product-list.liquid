{% comment %}
  Product List Section - Shopify Theme Section
  Displays products from a selected collection with customizable heading
  Product cards feature: image gallery thumbnails, wishlist, pricing, and add to cart
{% endcomment %}

<section class="product-list-section" data-section-id="{{ section.id }}">
  <div class="product-list-container">
    
    {%- comment -%} Section Header {%- endcomment -%}
    <div class="product-list-header header-align-{{ section.settings.header_alignment }}">
      {% if section.settings.heading != blank %}
        <h2 class="product-list-heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.collection != blank %}
        <span class="collection-name">{{ section.settings.collection.title }}</span>
      {% endif %}
    </div>

    {%- comment -%} Products Grid {%- endcomment -%}
    {% if section.settings.collection != blank %}
      <div class="product-list-grid">
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          <div class="product-card" data-product-id="{{ product.id }}">
            
            {%- comment -%} Main Product Image {%- endcomment -%}
            <div class="product-card-media">
              <a href="{{ product.url }}" class="product-card-link">
                {% if product.featured_image != blank %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="product-card-image main-image"
                    loading="lazy"
                    width="300"
                    height="300"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'product-card-image placeholder-svg' }}
                {% endif %}
              </a>

              {%- comment -%} Sale Badge {%- endcomment -%}
              {% if product.compare_at_price > product.price %}
                <span class="sale-badge">Sale</span>
              {% endif %}
            </div>

            {%- comment -%} Variant Thumbnails (if variants exist) or Image Thumbnails {%- endcomment -%}
            {% if product.variants.size > 1 %}
              <div class="product-thumbnails" data-thumbnail-type="variants">
                {% for variant in product.variants %}
                  <div class="thumbnail-item {% if forloop.first %}active{% endif %}"
                       data-index="{{ forloop.index0 }}"
                       data-variant-id="{{ variant.id }}"
                       data-variant-price="{{ variant.price | money }}"
                       data-variant-compare-price="{% if variant.compare_at_price > variant.price %}{{ variant.compare_at_price | money }}{% endif %}"
                       data-variant-available="{{ variant.available }}"
                       data-image-url="{% if variant.featured_image %}{{ variant.featured_image | image_url: width: 600 }}{% else %}{{ product.featured_image | image_url: width: 600 }}{% endif %}"
                       data-image-alt="{{ variant.title | escape }}">
                    {% if variant.featured_image %}
                      <img
                        src="{{ variant.featured_image | image_url: width: 100 }}"
                        alt="{{ variant.title | escape }}"
                        loading="lazy"
                        width="50"
                        height="50"
                      >
                    {% else %}
                      <span class="variant-label">{{ variant.title | truncate: 10 }}</span>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            {% elsif product.images.size > 1 %}
              <div class="product-thumbnails" data-thumbnail-type="images">
                {% for image in product.images %}
                  <div class="thumbnail-item {% if forloop.first %}active{% endif %}"
                       data-index="{{ forloop.index0 }}"
                       data-image-url="{{ image | image_url: width: 600 }}"
                       data-image-alt="{{ image.alt | escape }}">
                    <img
                      src="{{ image | image_url: width: 100 }}"
                      alt="{{ image.alt | escape }}"
                      loading="lazy"
                      width="50"
                      height="50"
                    >
                  </div>
                {% endfor %}
              </div>
            {% endif %}

            {%- comment -%} Product Info {%- endcomment -%}
            <div class="product-card-info">
              <a href="{{ product.url }}" class="product-title">
                {{ product.title }}
              </a>
              
              <span class="product-type">
                {{ product.type | upcase }}
              </span>

              <div class="product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="price-sale">{{ product.price | money }}</span>
                  <span class="price-compare">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="price-regular">{{ product.price | money }}</span>
                {% endif %}
              </div>
            </div>

            {%- comment -%} Add to Cart Button {%- endcomment -%}
            <div class="product-card-actions">
              {% form 'product', product, class: 'product-form' %}
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <input type="hidden" name="quantity" value="1">
                
                <button 
                  type="submit" 
                  name="add" 
                  class="add-to-cart-btn"
                  {% unless product.available %}disabled{% endunless %}
                >
                  <svg class="cart-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="9" cy="21" r="1"/>
                    <circle cx="20" cy="21" r="1"/>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                  </svg>
                  {% if product.available %}
                    {{ section.settings.add_to_cart_text }}
                  {% else %}
                    SOLD OUT
                  {% endif %}
                </button>
              {% endform %}
            </div>
          </div>
        {% endfor %}
      </div>

      {%- comment -%} View All Button {%- endcomment -%}
      {% if section.settings.show_view_all and section.settings.collection != blank %}
        <div class="view-all-container">
          <a href="{{ section.settings.collection.url }}" class="view-all-btn">
            View All
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="no-collection-message">
        <p>Please select a collection in the theme editor to display products.</p>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Image/Variant cycling functionality
    const productCards = document.querySelectorAll('.product-card');

    productCards.forEach(card => {
      const thumbnails = card.querySelectorAll('.thumbnail-item');
      const thumbnailContainer = card.querySelector('.product-thumbnails');
      const mainImage = card.querySelector('.main-image');
      const mainImageLink = card.querySelector('.product-card-link');
      const priceContainer = card.querySelector('.product-price');
      const variantInput = card.querySelector('input[name="id"]');
      const addToCartBtn = card.querySelector('.add-to-cart-btn');
      const isVariantType = thumbnailContainer?.dataset.thumbnailType === 'variants';
      let currentIndex = 0;

      if (thumbnails.length === 0) return;

      function updateImage(index) {
        // Ensure index wraps around
        if (index >= thumbnails.length) {
          currentIndex = 0;
        } else if (index < 0) {
          currentIndex = thumbnails.length - 1;
        } else {
          currentIndex = index;
        }

        const activeThumbnail = thumbnails[currentIndex];

        // Update active state on thumbnails
        thumbnails.forEach(t => t.classList.remove('active'));
        activeThumbnail.classList.add('active');

        // Update main image
        if (mainImage && activeThumbnail.dataset.imageUrl) {
          mainImage.src = activeThumbnail.dataset.imageUrl;
          mainImage.alt = activeThumbnail.dataset.imageAlt || '';
        }

        // If this is a variant thumbnail, update price and variant ID
        if (isVariantType) {
          const variantPrice = activeThumbnail.dataset.variantPrice;
          const variantComparePrice = activeThumbnail.dataset.variantComparePrice;
          const variantId = activeThumbnail.dataset.variantId;
          const variantAvailable = activeThumbnail.dataset.variantAvailable === 'true';

          // Update price display
          if (priceContainer && variantPrice) {
            if (variantComparePrice) {
              priceContainer.innerHTML = `
                <span class="price-sale">${variantPrice}</span>
                <span class="price-compare">${variantComparePrice}</span>
              `;
            } else {
              priceContainer.innerHTML = `
                <span class="price-regular">${variantPrice}</span>
              `;
            }
          }

          // Update hidden variant ID input
          if (variantInput && variantId) {
            variantInput.value = variantId;
          }

          // Update add to cart button availability
          if (addToCartBtn) {
            if (variantAvailable) {
              addToCartBtn.disabled = false;
              addToCartBtn.innerHTML = `
                <svg class="cart-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="9" cy="21" r="1"/>
                  <circle cx="20" cy="21" r="1"/>
                  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                </svg>
                {{ section.settings.add_to_cart_text }}
              `;
            } else {
              addToCartBtn.disabled = true;
              addToCartBtn.innerHTML = `
                <svg class="cart-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="9" cy="21" r="1"/>
                  <circle cx="20" cy="21" r="1"/>
                  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                </svg>
                SOLD OUT
              `;
            }
          }
        }

        // Center the active thumbnail within its container
        if (thumbnailContainer && activeThumbnail) {
          thumbnailContainer.scrollLeft = activeThumbnail.offsetLeft - thumbnailContainer.offsetWidth / 2 + activeThumbnail.offsetWidth / 2;
        }
      }



      // Click on thumbnail to select specific image/variant
      thumbnails.forEach((thumb, index) => {
        thumb.addEventListener('click', function(e) {
          e.stopPropagation();
          updateImage(index);
        });
      });

      // Initialize
      updateImage(0);
    });
  });
</script>

