<style>
  .product-list-section {
    --heading-color: {{ section.settings.heading_color }};
    --collection-name-color: {{ section.settings.collection_name_color }};
    --card-background: {{ section.settings.card_background }};
    --price-color: {{ section.settings.price_color }};
    --sale-price-color: {{ section.settings.sale_price_color }};
    --compare-price-color: {{ section.settings.compare_price_color }};
    --product-type-color: {{ section.settings.product_type_color }};
    --button-background: {{ section.settings.button_background }};
    --button-text: {{ section.settings.button_text }};

    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .product-list-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Header Styles */
  .product-list-header {
    margin-bottom: 40px;
  }

  .header-align-left {
    text-align: left;
  }

  .header-align-center {
    text-align: center;
  }

  .header-align-right {
    text-align: right;
  }

  .product-list-heading {
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 700;
    color: var(--heading-color);
    margin: 0 0 12px 0;
    letter-spacing: -0.02em;
  }

  .collection-name {
    font-size: 16px;
    color: var(--collection-name-color);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: block;
  }

  /* View All Button Container */
  .view-all-container {
    text-align: center;
    margin-top: 40px;
  }

  .view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    border-bottom: 2px solid var(--button-background);
    padding-bottom: 6px;
    color: var(--button-background);
    text-decoration: none;
    transition: color 0.3s ease, border-color 0.3s ease;
  }

  .view-all-btn:hover {
    opacity: 0.8;
  }

  .view-all-btn svg {
    transition: transform 0.3s ease;
  }

  .view-all-btn:hover svg {
    transform: translateX(4px);
  }

  /* Products Grid */
  .product-list-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 24px;
    max-width: 100%;
  }

  @media screen and (min-width: 769px) {
    .product-list-grid {
      grid-template-columns: repeat({{ section.settings.desktop_columns }}, 1fr);
    }
  }

  /* Product Card */
  .product-card {
    background: var(--card-background);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
  }

  /* Product Media */
  .product-card-media {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: #f8f8f8;
  }

  .product-card-link {
    display: block;
    width: 100%;
    height: 100%;
  }

  .product-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .product-card:hover .product-card-image {
    transform: scale(1.05);
  }

  .placeholder-svg {
    width: 100%;
    height: 100%;
  }

  /* Sale Badge */
  .sale-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: #ff4757;
    color: white;
    font-size: 11px;
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    z-index: 2;
  }

  /* Thumbnails */
  .product-thumbnails {
    display: flex;
    gap: 8px;
    padding: 12px 16px;
    padding-right: calc(50% + 16px);
    background: white;
    justify-content: flex-start;
    overflow-x: auto;
    scrollbar-width: none; /* Hide scrollbar for Firefox */
  }

  /* Hide scrollbar for Chrome, Safari and Edge */
  .product-thumbnails::-webkit-scrollbar {
    display: none;
  }

  .thumbnail-item {
    flex-shrink: 0;
    width: 44px;
    height: 44px;
    border-radius: 8px;
    border: 2px solid transparent;
    background: #f5f5f5;
    cursor: pointer;
    padding: 4px;
    transition: all 0.2s ease;
    overflow: hidden;
  }

  .thumbnail-item:hover {
    border-color: #ddd;
    transform: scale(1.05);
  }

  .thumbnail-item.active {
    border-color: var(--button-background);
    background: white;
  }

  .thumbnail-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .thumbnail-item .variant-label {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    font-size: 9px;
    font-weight: 600;
    text-align: center;
    color: var(--heading-color);
    line-height: 1.1;
    word-break: break-word;
  }

  /* Product Info */
  .product-card-info {
    padding: 16px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .product-title {
    font-size: 15px;
    font-weight: 600;
    color: var(--heading-color);
    text-decoration: none;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.2s ease;
  }

  .product-title:hover {
    color: var(--product-type-color);
  }

  .product-type {
    font-size: 11px;
    font-weight: 600;
    color: var(--product-type-color);
    letter-spacing: 0.08em;
  }

  .product-price {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-top: 4px;
  }

  .price-regular,
  .price-sale {
    font-size: 18px;
    font-weight: 700;
    color: var(--price-color);
  }

  .price-compare {
    font-size: 14px;
    color: var(--compare-price-color);
    text-decoration: line-through;
  }

  /* Add to Cart Button */
  .product-card-actions {
    padding: 0 16px 16px;
  }

  .product-form {
    width: 100%;
  }

  .add-to-cart-btn {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 14px 20px;
    background: var(--button-background);
    color: var(--button-text);
    border: none;
    border-radius: 10px;
    font-size: {{ section.settings.add_to_cart_font_size }}px;
    font-weight: 700;
    letter-spacing: 0.08em;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .add-to-cart-btn:hover:not(:disabled) {
    background: var(--product-type-color);
    transform: translateY(-2px);
  }

  .add-to-cart-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .add-to-cart-btn .cart-icon {
    width: 18px;
    height: 18px;
  }

  /* No Collection Message */
  .no-collection-message {
    text-align: center;
    padding: 60px 20px;
    color: var(--collection-name-color);
    font-size: 16px;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .product-list-grid {
      grid-template-columns: repeat({{ section.settings.mobile_columns }}, 1fr);
      gap: 16px;
    }

    .product-list-heading {
      font-size: 28px;
    }

    .thumbnail-item {
      width: 36px;
      height: 36px;
    }

    .product-card-info {
      padding: 12px;
    }

    .product-title {
      font-size: 14px;
    }

    .price-regular,
    .price-sale {
      font-size: 16px;
    }

    .add-to-cart-btn {
      padding: 12px 16px;
    }
  }

  @media screen and (max-width: 480px) {
    .product-list-container {
      padding: 0 12px;
    }

    .product-list-grid {
      gap: 12px;
    }

    .product-card-media {
      aspect-ratio: 1;
    }

    .sale-badge {
      font-size: 10px;
      padding: 3px 8px;
      top: 8px;
      left: 8px;
    }

    .product-thumbnails {
      padding: 8px 10px;
      gap: 6px;
    }

    .thumbnail-item {
      width: 32px;
      height: 32px;
    }

    .product-card-info {
      padding: 10px;
    }

    .product-title {
      font-size: 13px;
    }

    .product-type {
      font-size: 10px;
    }

    .price-regular,
    .price-sale {
      font-size: 15px;
    }

    .price-compare {
      font-size: 12px;
    }

    .product-card-actions {
      padding: 0 10px 10px;
    }

    .add-to-cart-btn {
      padding: 10px 12px;
      font-size: 11px;
      border-radius: 8px;
    }

    .add-to-cart-btn .cart-icon {
      width: 14px;
      height: 14px;
    }
  }
</style>
