{% comment %}
  Complementary Products Section
  Displays products that complement the current product.
  Uses Shopify's Recommendations API with intent=complementary.
{% endcomment %}

<section
  class="comp-products-section"
  data-section-id="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-limit="{{ section.settings.products_to_show }}"
  data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.products_to_show }}&intent=complementary"
>
  <div class="comp-products-container">
    {% if section.settings.heading != blank %}
      <h2 class="comp-products-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if recommendations.performed and recommendations.products_count > 0 %}
      <div class="comp-products-grid">
        {% for product in recommendations.products limit: section.settings.products_to_show %}
          <div class="comp-product-card">
            <a href="{{ product.url }}" class="comp-card-link">
              <div class="comp-card-media">
                {% if product.featured_image != blank %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    srcset="{{ product.featured_image | image_url: width: 200 }} 200w, {{ product.featured_image | image_url: width: 400 }} 400w, {{ product.featured_image | image_url: width: 600 }} 600w"
                    sizes="(max-width: 768px) 45vw, 200px"
                    alt="{{ product.featured_image.alt | default: product.title | escape }}"
                    {% if product.featured_image.presentation %}style="object-position: {{ product.featured_image.presentation.focal_point }}"{% endif %}
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'comp-card-placeholder' }}
                {% endif %}
              </div>
              <div class="comp-card-info">
                <h3 class="comp-card-title">{{ product.title }}</h3>
                <div class="comp-card-price">
                  {% if product.price_varies %}
                    <span class="comp-price">{{ product.price_min | money }} â€“ {{ product.price_max | money }}</span>
                  {% elsif product.compare_at_price > product.price %}
                    <span class="comp-price comp-price--sale">{{ product.price | money }}</span>
                    <span class="comp-price--compare">{{ product.compare_at_price | money }}</span>
                  {% else %}
                    <span class="comp-price">{{ product.price | money }}</span>
                  {% endif %}
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

<script>
(function() {
  function initCompProducts(section) {
    if (!section || !section.dataset.url) return;

    fetch(section.dataset.url)
      .then(function(response) { return response.text(); })
      .then(function(html) {
        var parser = new DOMParser();
        var doc = parser.parseFromString(html, 'text/html');
        var newSection = doc.querySelector('.comp-products-section');
        if (newSection && newSection.querySelector('.comp-products-grid')) {
          section.innerHTML = newSection.innerHTML;
        }
      })
      .catch(function() {});
  }

  document.addEventListener('DOMContentLoaded', function() {
    initCompProducts(document.querySelector('.comp-products-section[data-section-id="{{ section.id }}"]'));
  });

  document.addEventListener('shopify:section:load', function(e) {
    var section = e.target.querySelector('.comp-products-section') || e.target;
    initCompProducts(section);
  });
})();
</script>

{% stylesheet %}
  .comp-products-section {
    padding: 40px 0;
  }
  .comp-products-container {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0 var(--page-margin, 20px);
  }
  .comp-products-heading {
    font-size: 22px;
    font-weight: 600;
    margin: 0 0 20px;
    color: var(--color-foreground, #1a1a1a);
  }
  .comp-products-grid {
    display: flex;
    gap: 16px;
    overflow-x: auto;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 8px;
  }
  .comp-products-grid::-webkit-scrollbar { display: none; }

  .comp-product-card {
    flex: 0 0 200px;
    min-width: 0;
  }
  .comp-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .comp-card-media {
    aspect-ratio: 1;
    border-radius: 12px;
    overflow: hidden;
    background: #f5f5f5;
    margin-bottom: 10px;
  }
  .comp-card-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  .comp-card-link:hover .comp-card-media img {
    transform: scale(1.05);
  }
  .comp-card-placeholder {
    width: 100%;
    height: 100%;
  }
  .comp-card-info {
    padding: 4px 0;
  }
  .comp-card-title {
    font-size: 14px;
    font-weight: 500;
    margin: 0 0 4px;
    color: var(--color-foreground, #1a1a1a);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
  }
  .comp-card-price {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
  }
  .comp-price {
    font-weight: 600;
    color: var(--color-foreground, #1a1a1a);
  }
  .comp-price--sale {
    color: var(--color-primary, #5c9bdd);
  }
  .comp-price--compare {
    text-decoration: line-through;
    color: #999;
    font-size: 13px;
  }

  @media (max-width: 768px) {
    .comp-product-card {
      flex: 0 0 160px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Complementary products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Pairs well with"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Complementary products"
    }
  ]
}
{% endschema %}
