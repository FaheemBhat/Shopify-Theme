<div class="collections-grid full-width  section-spacing color-{{ section.settings.color_scheme }}">
  <div class="collections-container">
    {% for block in section.blocks %}
      <div class="collection-item 
        {% if block.settings.size == 'large' %}collection-tall
        {% elsif block.settings.size == 'medium' %}collection-wide
        {% endif %}">
        
        <a href="{{ block.settings.link }}" class="collection-link">
          
          {% if block.settings.image %}
            <img 
              src="{{ block.settings.image | image_url: width: 1400 }}" 
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
              class="collection-image"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}">
          {% endif %}

          <div class="collection-content">
            {% if block.settings.subtitle != blank %}
              <p class="collection-subtitle">{{ block.settings.subtitle }}</p>
            {% endif %}

            <h3 class="collection-title">{{ block.settings.title }}</h3>

            {% if block.settings.description != blank %}
              <p class="collection-desc">{{ block.settings.description }}</p>
            {% endif %}

            {% if block.settings.button_text != blank %}
              <span class="collection-button">{{ block.settings.button_text }}</span>
            {% endif %}
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.collections-grid {
  background-color: var(--color-background);
  color: var(--color-foreground);
  transition: background-color 0.3s ease, color 0.3s ease;
}

.collections-container {
  display: grid;
  grid-template-columns: 1.2fr 1fr 1fr;
  grid-auto-rows: 260px;
  gap: 20px;
}

.collection-item {
  overflow: hidden;
  position: relative;
}

.collection-tall {
  grid-row: span 2;
}

.collection-wide {
  grid-column: span 2;
}

.collection-link {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
  text-decoration: none;
}

.collection-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform .5s ease;
}

.collection-link:hover .collection-image {
  transform: scale(1.05);
}

.collection-content {
  position: absolute;
  bottom: 40px;
  left: 40px;
  color: var(--color-foreground);
  max-width: 80%;
  transition: color 0.3s ease;
}

.collection-subtitle {
  font-size: 12px;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin-bottom: 10px;
  color: var(--color-secondary);
  transition: color 0.3s ease;
}

.collection-title {
  font-size: 32px;
  font-weight: 700;
  text-transform: uppercase;
  margin-bottom: 12px;
  color: var(--color-foreground);
  transition: color 0.3s ease;
}

.collection-desc {
  font-size: 14px;
  max-width: 260px;
  margin-bottom: 20px;
  color: var(--color-foreground);
  transition: color 0.3s ease;
}

.collection-button {
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 2px;
  border-bottom: 2px solid var(--color-primary);
  padding-bottom: 6px;
  color: var(--color-primary);
  transition: color 0.3s ease, border-color 0.3s ease;
}

.collection-button:hover {
  color: var(--color-accent);
  border-color: var(--color-accent);
}

.section-spacing {
  margin-top: 80px;
}

@media (max-width: 768px) {
  .section-spacing {
    margin-top: 50px;
  }
}

@media(max-width: 900px){
  .collections-container{
    grid-template-columns: 1fr;
    grid-auto-rows: auto;
  }
  .collection-tall,
  .collection-wide{
    grid-row: auto;
    grid-column: auto;
  }
}
</style>

{% schema %}
