<div class="collections-grid section-spacing color-{{ section.settings.color_scheme }}"
     style="padding-top: {{ section.settings.section_padding_top }}px; padding-bottom: {{ section.settings.section_padding_bottom }}px;">
  <div class="collections-container title-size-{{ section.settings.title_size }} content-position-{{ section.settings.content_position }}">
    {% for block in section.blocks %}
      <div class="collection-item 
        {% if block.settings.size == 'large' %}collection-tall
        {% elsif block.settings.size == 'medium' %}collection-wide
        {% endif %}">
        
        <a href="{{ block.settings.link }}" class="collection-link">
          
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 1400 }}"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
              class="collection-image"
              width="1400"
              height="1400">
          {% endif %}

          <span class="collection-overlay" style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></span>

          <div class="collection-content">
            {% if block.settings.subtitle != blank %}
              <p class="collection-subtitle">{{ block.settings.subtitle }}</p>
            {% endif %}

            <h3 class="collection-title">{{ block.settings.title }}</h3>

            {% if block.settings.description != blank %}
              <p class="collection-desc">{{ block.settings.description }}</p>
            {% endif %}

            {% if block.settings.button_text != blank %}
              <span class="collection-button">{{ block.settings.button_text }}</span>
            {% endif %}
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.collections-grid {
  background-color: var(--color-background);
  color: var(--color-foreground);
  transition: background-color 0.3s ease, color 0.3s ease;
  padding: 0 20px;
}

.collections-container {
  display: grid;
  grid-template-columns: 1.2fr 1fr 1fr;
  grid-auto-rows: 260px;
  gap: 20px;
  max-width: 1400px;
  margin: 0 auto;
}

.collection-item {
  overflow: hidden;
  position: relative;
  border-radius: 8px;
}

.collection-tall {
  grid-row: span 2;
}

.collection-wide {
  grid-column: span 2;
}

.collection-link {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
  text-decoration: none;
}

.collection-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform .5s ease, opacity .3s ease;
  display: block;
}

.collection-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
  transition: opacity .3s ease;
}

.collection-link:hover .collection-image {
  transform: scale(1.05);
}

.collection-content {
  position: absolute;
  left: 40px;
  color: var(--color-foreground);
  max-width: 80%;
  z-index: 2;
  transition: all 0.3s ease;
}

/* Content Vertical Positioning */
.content-position-bottom .collection-content {
  bottom: 40px;
  top: auto;
}

.content-position-center .collection-content {
  top: 50%;
  transform: translateY(-50%);
  bottom: auto;
}

.content-position-top .collection-content {
  top: 40px;
  bottom: auto;
}

.collection-subtitle {
  font-size: 12px;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin-bottom: 10px;
  color: var(--color-secondary);
  transition: color 0.3s ease;
}

.collection-title {
  font-weight: 700;
  text-transform: uppercase;
  margin-bottom: 12px;
  color: var(--color-foreground);
  transition: color 0.3s ease;
}

/* Title Size Options */
.title-size-small .collection-title {
  font-size: 24px;
}

.title-size-medium .collection-title {
  font-size: 32px;
}

.title-size-large .collection-title {
  font-size: 42px;
}

.collection-desc {
  font-size: 14px;
  max-width: 260px;
  margin-bottom: 20px;
  color: var(--color-foreground);
  transition: color 0.3s ease;
}

.collection-button {
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 2px;
  border-bottom: 2px solid var(--color-button);
  padding-bottom: 6px;
  color: var(--color-button);
  transition: color 0.3s ease, border-color 0.3s ease;
}

.collection-button:hover {
  opacity: 0.8;
}

@media (max-width: 768px) {

  .collections-grid {
    padding: 0 15px;
  }

  .collections-container {
    gap: 15px;
    grid-auto-rows: 300px;
  }

  .content-position-bottom .collection-content {
    bottom: 20px;
  }

  .content-position-center .collection-content {
    top: 50%;
  }

  .content-position-top .collection-content {
    top: 20px;
  }

  .collection-content {
    left: 20px;
    max-width: 85%;
  }

  /* Mobile Title Sizes */
  .title-size-small .collection-title {
    font-size: 18px;
  }

  .title-size-medium .collection-title {
    font-size: 24px;
  }

  .title-size-large .collection-title {
    font-size: 30px;
  }

  .collection-title {
    margin-bottom: 8px;
  }

  .collection-desc {
    font-size: 13px;
    margin-bottom: 15px;
  }

  .collection-button {
    font-size: 11px;
  }
}

@media(max-width: 900px){
  .collections-container{
    grid-template-columns: 1fr;
  }
  .collection-tall,
  .collection-wide{
    grid-row: auto;
    grid-column: auto;
  }
}
</style>

