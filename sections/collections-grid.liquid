{%- liquid
  assign title_size = section.settings.title_size
  assign content_pos = section.settings.content_position
  assign overlay_color = section.settings.overlay_color
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
  assign pt = section.settings.section_padding_top
  assign pb = section.settings.section_padding_bottom
-%}

<style>
  .cg-section {
    padding: {{ pt }}px 20px {{ pb }}px;
    min-width: 0;
  }
  .cg-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: 280px 280px;
    gap: 20px;
    width: min(1400px, calc(100vw - 40px));
    margin: 0 auto;
  }
  .cg-card {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    background-color: #f0ebe5;
  }
  .cg-card--tall {
    grid-column: span 2;
    grid-row: span 2;
  }
  .cg-card--wide {
    grid-column: span 2;
  }
  .cg-card-link {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    text-decoration: none;
  }
  .cg-card-img {
    position: absolute;
    top: 0; left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform .5s ease;
  }
  .cg-card-link:hover .cg-card-img {
    transform: scale(1.05);
  }
  .cg-card-overlay {
    position: absolute;
    top: 0; left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }
  .cg-card-content {
    position: absolute;
    left: 40px;
    max-width: 80%;
    z-index: 2;
  }
  .cg-pos-bottom .cg-card-content { bottom: 40px; }
  .cg-pos-center .cg-card-content { top: 50%; transform: translateY(-50%); }
  .cg-pos-top .cg-card-content { top: 40px; }

  .cg-subtitle {
    font-size: 12px;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 10px;
    color: var(--color-foreground, #666);
    opacity: 0.6;
  }
  .cg-title {
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 12px;
    color: var(--color-foreground, #1a1a1a);
  }
  .cg-title-small .cg-title { font-size: 24px; }
  .cg-title-medium .cg-title { font-size: 32px; }
  .cg-title-large .cg-title { font-size: 42px; }

  .cg-desc {
    font-size: 14px;
    max-width: 260px;
    margin-bottom: 20px;
    color: var(--color-foreground, #444);
    opacity: 0.85;
  }
  .cg-btn {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    border-bottom: 2px solid var(--color-button, #4A90D9);
    padding-bottom: 6px;
    color: var(--color-button, #4A90D9);
    background: none;
    border-top: none;
    border-left: none;
    border-right: none;
    padding-left: 0;
    padding-right: 0;
    cursor: pointer;
  }
  .cg-btn:hover { opacity: 0.6; }

  @media (max-width: 900px) {
    .cg-grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
    }
    .cg-card--tall,
    .cg-card--wide {
      grid-column: auto;
      grid-row: auto;
    }
    .cg-card { min-height: 300px; }
    .cg-card--tall { min-height: 400px; }
  }
  @media (max-width: 768px) {
    .cg-section { padding-left: 15px; padding-right: 15px; }
    .cg-grid { gap: 15px; width: min(1400px, calc(100vw - 30px)); }
    .cg-card-content { left: 20px; max-width: 85%; }
    .cg-pos-bottom .cg-card-content { bottom: 20px; }
    .cg-title-small .cg-title { font-size: 18px; }
    .cg-title-medium .cg-title { font-size: 24px; }
    .cg-title-large .cg-title { font-size: 30px; }
    .cg-title { margin-bottom: 8px; }
    .cg-desc { font-size: 13px; margin-bottom: 15px; }
    .cg-btn { font-size: 11px; }
  }
</style>

<div class="cg-section full-width color-{{ section.settings.color_scheme }} cg-title-{{ title_size }} cg-pos-{{ content_pos }}">
  <div class="cg-grid">
    {% for block in section.blocks %}
      <div class="cg-card {% if block.settings.size == 'large' %}cg-card--tall{% elsif block.settings.size == 'medium' %}cg-card--wide{% endif %}" {{ block.shopify_attributes }}>
        <a href="{{ block.settings.link }}" class="cg-card-link">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 1400 }}"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
              class="cg-card-img"
              width="1400"
              height="1400">
          {% endif %}

          <span class="cg-card-overlay" style="background-color: {{ overlay_color }}; opacity: {{ overlay_opacity }};"></span>

          <div class="cg-card-content">
            {% if block.settings.subtitle != blank %}
              <p class="cg-subtitle">{{ block.settings.subtitle }}</p>
            {% endif %}
            <h3 class="cg-title">{{ block.settings.title }}</h3>
            {% if block.settings.description != blank %}
              <p class="cg-desc">{{ block.settings.description }}</p>
            {% endif %}
            {% if block.settings.button_text != blank %}
              <span class="cg-btn">{{ block.settings.button_text }}</span>
            {% endif %}
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

