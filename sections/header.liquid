<header class="site-header">
  <!-- Logo -->
  <h2 class="header__title">
    {{ shop.name | link_to: routes.root_url }}
  </h2>

  <!-- Menu -->
  <nav class="header__menu">
    {% for link in linklists.main-menu.links %}
      <a href="{{ link.url }}" class="header__menu-link">
        {{ link.title }}
      </a>
    {% endfor %}
  </nav>

  <!-- Right Section -->
  <div class="header__right">

    <!-- Search -->
    <div class="header__search">
      <form action="{{ routes.search_url }}" method="get" role="search">
        <input type="hidden" name="type" value="product">

        <input
          type="search"
          id="HeaderSearchInput"
          name="q"
          placeholder="Search products..."
          autocomplete="off"
          class="search-input"
        />

        <button type="submit" class="search-btn">üîç</button>
      </form>

      <div id="PredictiveResults" class="predictive-search"></div>
      <div id="RecentSearches" class="recent-searches"></div>

    </div>

    <!-- Icons -->
    <div class="header__icons">
      {% if shop.customer_accounts_enabled %}
        {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
      {% endif %}

      <a href="{{ routes.cart_url }}">
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}
        {{ 'icon-cart.svg' | inline_asset_content }}
      </a>
    </div>

  </div>
</header>
{% stylesheet %}
.site-header {
  height: 5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 1.5rem;
}

.site-header a {
  text-decoration: none;
  color: var(--color-foreground);
}

.header__menu {
  display: flex;
  gap: 1.5rem;
}

.header__menu-link {
  font-size: 14px;
  font-weight: 500;
}

.header__right {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.header__icons {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.header__icons a {
  position: relative;
}

.header__icons sup {
  position: absolute;
  top: -6px;
  right: -8px;
  background: black;
  color: white;
  font-size: 10px;
  padding: 2px 6px;
  border-radius: 20px;
}

/* Search */

.header__search {
  position: relative;
}

.header__search form {
  display: flex;
  align-items: center;
  background: #f1f1f1;
  border-radius: 30px;
  padding: 6px 14px;
  width: 220px;
}

.search-input {
  width: 100%;
  border: none;
  background: transparent;
  outline: none;
  font-size: 14px;
}

.search-btn {
  background: none;
  border: none;
  cursor: pointer;
  font-size: 16px;
}

/* Predictive dropdown */

.predictive-search {
  position: absolute;
  top: 110%;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 14px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  overflow: hidden;
  display: none;
  z-index: 99;
}

.predictive-search a {
  display: block;
  padding: 12px 15px;
  border-bottom: 1px solid #eee;
  font-size: 14px;
  color: #333;
}

.predictive-search a:hover {
  background: #f6f6f6;
}
.search-item {
  display: flex !important;
  align-items: center;
  gap: 12px;
  padding: 10px 14px;
}

.search-item img {
  width: 42px;
  height: 42px;
  object-fit: cover;
  border-radius: 8px;
}

.search-info {
  display: flex;
  flex-direction: column;
}

.search-title {
  font-size: 14px;
  font-weight: 500;
}

.search-price {
  font-size: 13px;
  color: #888;
}
.no-results {
  padding: 15px;
  font-size: 14px;
  color: #666;
  text-align: center;
}
/* Skeleton */
.skeleton {
  display: flex;
  gap: 10px;
  padding: 12px;
}
.skeleton-img {
  width: 40px;
  height: 40px;
  background: #eee;
  border-radius: 8px;
}
.skeleton-lines span {
  display: block;
  width: 120px;
  height: 10px;
  background: #eee;
  margin-bottom: 6px;
  border-radius: 4px;
}

/* Highlight */
.highlight {
  background: #fff3c4;
}

/* View all */
.view-all {
  text-align: center;
  padding: 10px;
  font-weight: 600;
  background: #f7f7f7;
}

/* Recent searches */
.recent-searches {
  position: absolute;
  top: 110%;
  width: 100%;
  background: white;
  border-radius: 12px;
  box-shadow: 0 8px 30px rgba(0,0,0,.1);
  display: none;
  z-index: 50;
}
.recent-searches div {
  padding: 10px 15px;
  cursor: pointer;
}
.recent-searches div:hover {
  background: #f2f2f2;
}

{% endstylesheet %}
