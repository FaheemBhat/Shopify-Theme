{% comment %}
  Collections listing page â€” Displays all collections in a 4-column card grid.
  Each card links to its collection, shows the collection image,
  collection name below, and a "View all" button.
{% endcomment %}

{% if section.settings.show_breadcrumbs %}
  {% render 'breadcrumbs', breadcrumb_type: 'collections' %}
{% endif %}
<div class="collections-page" style="
  --btn-bg: {{ section.settings.button_color }};
  --btn-text: {{ section.settings.button_text_color }};
  --btn-font-size: {{ section.settings.button_font_size }}px;
">
  <h1 class="collections-page__heading">{{ 'collections.title' | t }}</h1>

  <div class="collections-grid">
    {% for collection in collections %}
      <div class="collection-card">
        <a href="{{ collection.url }}" class="collection-card__link" aria-label="{{ collection.title }}">
          <div class="collection-card__image-wrap">
            {% if collection.featured_image %}
              <img
                src="{{ collection.featured_image | image_url: width: 600, height: 600, crop: 'center' }}"
                srcset="{{ collection.featured_image | image_url: width: 300, height: 300, crop: 'center' }} 300w, {{ collection.featured_image | image_url: width: 450, height: 450, crop: 'center' }} 450w, {{ collection.featured_image | image_url: width: 600, height: 600, crop: 'center' }} 600w"
                sizes="(max-width: 480px) 50vw, (max-width: 900px) 50vw, 25vw"
                alt="{{ collection.featured_image.alt | default: collection.title | escape }}"
                {% if collection.featured_image.presentation %}style="object-position: {{ collection.featured_image.presentation.focal_point }}"{% endif %}
                width="600"
                height="600"
                loading="lazy"
              >
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'collection-card__placeholder' }}
            {% endif %}
          </div>
        </a>

        <div class="collection-card__info">
          <h3 class="collection-card__title">
            <a href="{{ collection.url }}">{{ collection.title }}</a>
          </h3>
          <a href="{{ collection.url }}" class="collection-card__view-all">
            {{ 'general.view_all' | t }}
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .collections-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .collections-page__heading {
    font-size: 28px;
    font-weight: 400;
    color: #1a1a1a;
    margin: 0 0 32px;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  .collection-card {
    display: flex;
    flex-direction: column;
    text-align: center;
  }

  .collection-card__link {
    display: block;
    text-decoration: none;
  }

  .collection-card__image-wrap {
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: 8px;
    background: #f5f5f5;
  }
  .collection-card__image-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  .collection-card__link:hover .collection-card__image-wrap img {
    transform: scale(1.05);
  }

  .collection-card__placeholder {
    width: 100%;
    height: 100%;
  }

  .collection-card__info {
    padding: 12px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
  }

  .collection-card__title {
    font-size: 16px;
    font-weight: 500;
    margin: 0;
  }
  .collection-card__title a {
    color: #1a1a1a;
    text-decoration: none;
  }
  .collection-card__title a:hover {
    text-decoration: underline;
  }

  .collection-card__view-all {
    display: inline-block;
    padding: 10px 28px;
    background: var(--btn-bg);
    color: var(--btn-text);
    font-size: var(--btn-font-size);
    font-weight: 500;
    text-decoration: none;
    border-radius: 8px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    margin-top: 4px;
  }
  .collection-card__view-all:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(92, 155, 221, 0.3);
  }

  @media (max-width: 900px) {
    .collections-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }
  }

  @media (max-width: 480px) {
    .collections-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }
    .collection-card__title {
      font-size: 14px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collections list",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    },
    {
      "type": "header",
      "content": "View all button"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#5c9bdd"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "button_font_size",
      "label": "Button font size",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 14
    }
  ],
  "presets": [{ "name": "Collections list" }]
}
{% endschema %}
