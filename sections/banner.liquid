<div class="banner-slideshow">
  <div class="slideshow-container">
    {% for block in section.blocks %}
      <div class="slide fade">
        <a href="{{ block.settings.link }}">
          {% if block.settings.image or block.settings.mobile_image %}
            <!-- Desktop Image -->
            {% if block.settings.image %}
              <picture>
                <!-- Mobile image if exists -->
                {% if block.settings.mobile_image %}
                  <source 
                    media="(max-width: 768px)" 
                    srcset="{{ block.settings.mobile_image | image_url: width: 768 }}">
                {% endif %}
                
                <!-- Desktop image (default) -->
                <img 
                  src="{{ block.settings.image | image_url: width: 1920 }}" 
                  alt="{{ block.settings.image.alt | default: 'Banner slide' | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  loading="lazy">
              </picture>
            {% elsif block.settings.mobile_image %}
              <!-- Only mobile image exists -->
              <img 
                src="{{ block.settings.mobile_image | image_url: width: 768 }}" 
                alt="{{ block.settings.mobile_image.alt | default: 'Banner slide' | escape }}"
                width="{{ block.settings.mobile_image.width }}"
                height="{{ block.settings.mobile_image.height }}"
                loading="lazy">
            {% endif %}
          {% else %}
            <div class="placeholder-image">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
          
          {% if block.settings.heading != blank or block.settings.subheading != blank %}
            <div class="slide-content">
              {% if block.settings.heading != blank %}
                <h2 class="slide-heading">{{ block.settings.heading }}</h2>
              {% endif %}
              {% if block.settings.subheading != blank %}
                <p class="slide-subheading">{{ block.settings.subheading }}</p>
              {% endif %}
              {% if block.settings.button_text != blank %}
                <span class="slide-button">{{ block.settings.button_text }}</span>
              {% endif %}
            </div>
          {% endif %}
        </a>
      </div>
    {% endfor %}

    <!-- Navigation arrows -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>

  <!-- Dots -->
  <div class="dot-container">
    {% for block in section.blocks %}
      <span class="dot" onclick="currentSlide({{ forloop.index }})"></span>
    {% endfor %}
  </div>
</div>

<style>
  .banner-slideshow {
    position: relative;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
  }

  .slideshow-container {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
  }

  .slide {
    display: none;
    width: 100%;
    height: 100%;
  }

  .slide a {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
  }

  .slide img,
  .slide picture {
    width: 100%;
    height: 100%;
  }

  .slide img {
    object-fit: cover;
    display: block;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-svg {
    width: 100%;
    height: 100%;
  }

  .slide-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
    z-index: 2;
    width: 80%;
    max-width: 1200px;
  }

  .slide-heading {
    font-size: 48px;
    font-weight: bold;
    margin-bottom: 16px;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
  }

  .slide-subheading {
    font-size: 24px;
    margin-bottom: 24px;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
  }

  .slide-button {
    display: inline-block;
    padding: 12px 32px;
    background: white;
    color: #333;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
    transition: background 0.3s ease;
  }

  .slide-button:hover {
    background: #f0f0f0;
  }

  /* Navigation arrows */
  .prev, .next {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: auto;
    margin-top: -22px;
    padding: 16px;
    color: white;
    font-weight: bold;
    font-size: 24px;
    transition: 0.3s ease;
    border-radius: 0 3px 3px 0;
    user-select: none;
    background-color: rgba(0,0,0,0.3);
    z-index: 3;
  }

  .next {
    right: 0;
    border-radius: 3px 0 0 3px;
  }

  .prev:hover, .next:hover {
    background-color: rgba(0,0,0,0.8);
  }

  /* Dots */
  .dot-container {
    text-align: center;
    padding: 20px;
    position: absolute;
    bottom: 20px;
    width: 100%;
    z-index: 3;
  }

  .dot {
    cursor: pointer;
    height: 15px;
    width: 15px;
    margin: 0 5px;
    background-color: rgba(255,255,255,0.5);
    border-radius: 50%;
    display: inline-block;
    transition: background-color 0.3s ease;
  }

  .active, .dot:hover {
    background-color: white;
  }

  /* Fade animation */
  .fade {
    animation-name: fade;
    animation-duration: 1s;
  }

  @keyframes fade {
    from {opacity: 0.4}
    to {opacity: 1}
  }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .slideshow-container {
      height: 300px;
    }

    .slide-heading {
      font-size: 32px;
    }

    .slide-subheading {
      font-size: 18px;
    }

    .prev, .next {
      font-size: 18px;
      padding: 12px;
    }

    .slide-button {
      padding: 10px 24px;
      font-size: 14px;
    }
  }
</style>

<script>
  let slideIndex = 1;
  showSlides(slideIndex);

  function plusSlides(n) {
    showSlides(slideIndex += n);
  }

  function currentSlide(n) {
    showSlides(slideIndex = n);
  }

  function showSlides(n) {
    let i;
    let slides = document.getElementsByClassName("slide");
    let dots = document.getElementsByClassName("dot");
    
    if (n > slides.length) {slideIndex = 1}
    if (n < 1) {slideIndex = slides.length}
    
    for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";
    }
    
    for (i = 0; i < dots.length; i++) {
      dots[i].className = dots[i].className.replace(" active", "");
    }
    
    if (slides[slideIndex-1]) {
      slides[slideIndex-1].style.display = "block";
    }
    
    if (dots[slideIndex-1]) {
      dots[slideIndex-1].className += " active";
    }
  }

  // Auto slide every 5 seconds
  setInterval(function() {
    plusSlides(1);
  }, 5000);
</script>

