{% comment %}
  Cart page section — Full page cart matching two-column design:
  Left: cart line items with image, title, price, quantity, line total, remove
  Right: free shipping bar, order note, coupon, estimated total, checkout button
{% endcomment %}

{% assign free_ship_threshold = section.settings.free_shipping_threshold | default: '800' | times: 1 %}
{% assign cart_total = cart.total_price | divided_by: 100.0 %}
{% assign remaining = free_ship_threshold | minus: cart_total %}
{% if remaining < 0 %}{% assign remaining = 0 %}{% endif %}
{% assign progress = cart_total | times: 100.0 | divided_by: free_ship_threshold %}
{% if progress > 100 %}{% assign progress = 100 %}{% endif %}

<div class="cart-page" data-section-id="{{ section.id }}" data-free-ship="{{ free_ship_threshold }}"
  style="
    --checkout-bg: {{ section.settings.checkout_btn_color }};
    --checkout-text: {{ section.settings.checkout_btn_text_color }};
    --checkout-font-size: {{ section.settings.checkout_font_size }}px;
    --action-bg: {{ section.settings.action_btn_color }};
    --action-text: {{ section.settings.action_btn_text_color }};
    --action-font-size: {{ section.settings.action_font_size }}px;
  ">
  {% if cart.item_count > 0 %}
    <h1 class="cart-page__heading">{{ 'cart.title' | t }} (<span id="cartItemCount">{{ cart.item_count }}</span>)</h1>
    <div class="cart-page__layout">

      {%- comment -%} ===== LEFT: CART ITEMS ===== {%- endcomment -%}
      <div class="cart-page__items">
        {% for item in cart.items %}
          <div class="cart-item" data-key="{{ item.key }}">
            <button class="cart-item__remove" data-key="{{ item.key }}" aria-label="{{ 'cart.remove' | t }} {{ item.title }}">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
            </button>

            <a href="{{ item.url }}" class="cart-item__image">
              {% if item.image %}
                <img src="{{ item.image | image_url: width: 200 }}" alt="{{ item.title | escape }}" width="120" height="120" loading="lazy">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'cart-item__placeholder' }}
              {% endif %}
            </a>

            <div class="cart-item__info">
              <a href="{{ item.url }}" class="cart-item__title">{{ item.product.title }}</a>
              {% if item.variant.title != 'Default Title' %}
                <span class="cart-item__variant">{{ item.variant.title }}</span>
              {% endif %}
              <span class="cart-item__unit-price">{{ item.original_price | money }}</span>
            </div>

            <div class="cart-item__qty">
              <button class="cart-item__qty-btn cart-item__qty-minus" data-key="{{ item.key }}" aria-label="Decrease quantity">−</button>
              <span class="cart-item__qty-val" data-key="{{ item.key }}">{{ item.quantity }}</span>
              <button class="cart-item__qty-btn cart-item__qty-plus" data-key="{{ item.key }}" aria-label="Increase quantity">+</button>
            </div>

            <span class="cart-item__line-price" data-key="{{ item.key }}">{{ item.final_line_price | money }}</span>
          </div>
        {% endfor %}
      </div>

      {%- comment -%} ===== RIGHT: SUMMARY ===== {%- endcomment -%}
      <div class="cart-page__summary">

        {%- comment -%} Free shipping progress {%- endcomment -%}
        {% if section.settings.show_free_shipping %}
          <div class="cart-summary__shipping" id="cartProgressWrap">
            <p class="cart-summary__shipping-msg" id="cartProgressMsg">
              {% if remaining > 0 %}
                Spend <span style="color: #008000;"><strong>{{ remaining | money }}</strong></span> more to reach free shipping!
              {% else %}
                {{ 'cart.free_shipping_reached' | t }}
              {% endif %}
            </p>
            <div class="cart-summary__progress-bar">
              <div class="cart-summary__progress-fill" id="cartProgressFill" style="width: {{ progress }}%;"></div>
            </div>
          </div>
        {% endif %}

        {%- comment -%} Order note accordion {%- endcomment -%}
        {% if section.settings.show_order_note %}
          <div class="cart-summary__accordion">
            <button class="cart-summary__accordion-btn" id="cartNoteToggle" aria-expanded="false">
              <span>{{ 'cart.order_note' | t }}</span>
              <svg class="cart-summary__accordion-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"/></svg>
            </button>
            <div class="cart-summary__accordion-panel" id="cartNotePanel" style="display: none;">
              <textarea class="cart-summary__note-input" id="cartNoteInput" placeholder="{{ 'cart.order_note_placeholder' | t }}" rows="3">{{ cart.note }}</textarea>
              <button class="cart-summary__note-save" id="cartNoteSave">{{ 'cart.save_note' | t }}</button>
            </div>
          </div>
        {% endif %}

        {%- comment -%} Coupon accordion {%- endcomment -%}
        {% if section.settings.show_coupon %}
          <div class="cart-summary__accordion">
            <button class="cart-summary__accordion-btn" id="cartCouponToggle" aria-expanded="false">
              <span>{{ 'cart.coupon' | t }}</span>
              <svg class="cart-summary__accordion-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"/></svg>
            </button>
            <div class="cart-summary__accordion-panel" id="cartCouponPanel" style="display: none;">
              <div class="cart-summary__coupon-row">
                <input type="text" class="cart-summary__coupon-input" id="cartCouponInput" placeholder="{{ 'cart.coupon_placeholder' | t }}">
                <button class="cart-summary__coupon-apply" id="cartCouponApply">{{ 'cart.coupon_apply' | t }}</button>
              </div>
              <p class="cart-summary__coupon-msg" id="cartCouponMsg"></p>
            </div>
          </div>
        {% endif %}

        {%- comment -%} Totals {%- endcomment -%}
        <div class="cart-summary__totals">
          <div class="cart-summary__total-row">
            <span class="cart-summary__total-label">{{ 'cart.estimated_total' | t }}</span>
            <span class="cart-summary__total-price" id="cartTotal">{{ cart.total_price | money }}</span>
          </div>
          <p class="cart-summary__tax-note">{{ 'cart.tax_note_html' | t }}</p>
        </div>

        {%- comment -%} Checkout button {%- endcomment -%}
        <a href="/checkout" class="cart-summary__checkout-btn">
          {{ 'cart.checkout' | t }}
        </a>
      </div>

    </div>
  {% else %}
    <div class="cart-page__empty">
      <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#ccc" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
      <p class="cart-page__empty-text">{{ 'cart.empty' | t }}</p>
      <a href="{{ routes.collections_url }}" class="cart-page__continue-btn">{{ 'cart.continue_shopping' | t }}</a>
    </div>
  {% endif %}
</div>

{% stylesheet %}
  .cart-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
    font-family: inherit;
  }

  .cart-page__heading {
    font-size: 28px;
    font-weight: 400;
    color: #1a1a1a;
    margin: 0 0 24px;
    line-height: 1.3;
  }

  .cart-page__layout {
    display: grid;
    grid-template-columns: 1fr 380px;
    gap: 60px;
    align-items: start;
  }

  /* ===== CART ITEMS ===== */
  .cart-page__items {
    border-top: 1px solid #e5e5e5;
  }

  .cart-item {
    display: grid;
    grid-template-columns: 30px 120px 1fr auto auto;
    gap: 20px;
    align-items: center;
    padding: 24px 0;
    border-bottom: 1px solid #e5e5e5;
  }

  .cart-item__remove {
    background: none;
    border: none;
    cursor: pointer;
    color: #999;
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s;
  }
  .cart-item__remove:hover {
    color: #333;
  }

  .cart-item__image {
    display: block;
    width: 120px;
    height: 120px;
    overflow: hidden;
    border-radius: 4px;
    flex-shrink: 0;
  }
  .cart-item__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-item__info {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  .cart-item__title {
    font-size: 15px;
    font-weight: 400;
    color: #1a1a1a;
    text-decoration: none;
    line-height: 1.4;
  }
  .cart-item__title:hover {
    text-decoration: underline;
  }
  .cart-item__variant {
    font-size: 13px;
    color: #777;
  }
  .cart-item__unit-price {
    font-size: 14px;
    color: #1a1a1a;
    margin-top: 4px;
  }

  /* Quantity */
  .cart-item__qty {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 30px;
    overflow: hidden;
  }
  .cart-item__qty-btn {
    width: 32px;
    height: 32px;
    border: none;
    background: none;
    cursor: pointer;
    font-size: 16px;
    color: #333;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
  }
  .cart-item__qty-btn:hover {
    background: #f5f5f5;
  }
  .cart-item__qty-val {
    min-width: 24px;
    text-align: center;
    font-size: 14px;
    color: #1a1a1a;
  }

  .cart-item__line-price {
    font-size: 15px;
    font-weight: 400;
    color: #1a1a1a;
    text-align: right;
    min-width: 80px;
  }

  /* ===== SUMMARY ===== */
  .cart-page__summary {
    position: sticky;
    top: 20px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  /* Free shipping */
  .cart-summary__shipping {
    margin-bottom: 4px;
  }
  .cart-summary__shipping-msg {
    font-size: 14px;
    color: #008000;
    margin: 0 0 8px;
  }
  .cart-summary__progress-bar {
    width: 100%;
    height: 6px;
    background: #e5e5e5;
    border-radius: 3px;
    overflow: hidden;
  }
  .cart-summary__progress-fill {
    height: 100%;
    background: #008000;
    border-radius: 3px;
    transition: width 0.4s ease;
  }

  /* Accordions */
  .cart-summary__accordion {
    border: 1px solid #e5e5e5;
    border-radius: 30px;
    overflow: hidden;
  }
  .cart-summary__accordion-btn {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 20px;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 14px;
    color: #1a1a1a;
  }
  .cart-summary__accordion-btn:hover {
    background: #fafafa;
  }
  .cart-summary__accordion-icon {
    transition: transform 0.25s ease;
  }
  .cart-summary__accordion-btn[aria-expanded="true"] .cart-summary__accordion-icon {
    transform: rotate(180deg);
  }
  .cart-summary__accordion-panel {
    padding: 0 20px 16px;
  }

  /* Note */
  .cart-summary__note-input {
    width: 100%;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 10px 12px;
    font-size: 14px;
    resize: vertical;
    font-family: inherit;
  }
  .cart-summary__note-save {
    margin-top: 8px;
    padding: 6px 16px;
    background: var(--action-bg);
    color: var(--action-text);
    border: none;
    border-radius: 6px;
    font-size: var(--action-font-size);
    cursor: pointer;
    transition: opacity 0.2s;
  }
  .cart-summary__note-save:hover {
    opacity: 0.85;
  }

  /* Coupon */
  .cart-summary__coupon-row {
    display: flex;
    gap: 8px;
  }
  .cart-summary__coupon-input {
    flex: 1;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 14px;
    font-family: inherit;
  }
  .cart-summary__coupon-apply {
    padding: 8px 16px;
    background: var(--action-bg);
    color: var(--action-text);
    border: none;
    border-radius: 8px;
    font-size: var(--action-font-size);
    cursor: pointer;
    white-space: nowrap;
    transition: opacity 0.2s;
  }
  .cart-summary__coupon-apply:hover {
    opacity: 0.85;
  }
  .cart-summary__coupon-msg {
    font-size: 13px;
    margin-top: 6px;
  }

  /* Totals */
  .cart-summary__totals {
    padding-top: 8px;
  }
  .cart-summary__total-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 16px;
    font-weight: 500;
    color: #1a1a1a;
  }
  .cart-summary__tax-note {
    font-size: 13px;
    color: #777;
    margin-top: 4px;
  }
  .cart-summary__tax-note a {
    color: #1a1a1a;
    text-decoration: underline;
  }

  /* Checkout */
  .cart-summary__checkout-btn {
    display: block;
    width: 100%;
    padding: 14px;
    background: var(--checkout-bg);
    color: var(--checkout-text);
    text-align: center;
    border: none;
    border-radius: 30px;
    font-size: var(--checkout-font-size);
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: opacity 0.2s;
  }
  .cart-summary__checkout-btn:hover {
    opacity: 0.9;
  }

  /* Empty state */
  .cart-page__empty {
    text-align: center;
    padding: 80px 20px;
  }
  .cart-page__empty-text {
    font-size: 18px;
    color: #777;
    margin: 16px 0 24px;
  }
  .cart-page__continue-btn {
    display: inline-block;
    padding: 12px 32px;
    background: #1a1a1a;
    color: #fff;
    text-decoration: none;
    border-radius: 30px;
    font-size: 14px;
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 900px) {
    .cart-page__layout {
      grid-template-columns: 1fr;
      gap: 32px;
    }
    .cart-item {
      grid-template-columns: 24px 80px 1fr;
      gap: 12px;
    }
    .cart-item__qty {
      grid-column: 3;
    }
    .cart-item__line-price {
      grid-column: 3;
      text-align: left;
    }
    .cart-page__summary {
      position: static;
    }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    var section = document.querySelector('.cart-page');
    if (!section) return;
    var freeShipThreshold = parseFloat(section.dataset.freeShip) || 800;

    /* ---- Quantity buttons ---- */
    section.addEventListener('click', function(e) {
      var btn = e.target.closest('.cart-item__qty-minus, .cart-item__qty-plus');
      if (!btn) return;

      var key = btn.dataset.key;
      var valEl = section.querySelector('.cart-item__qty-val[data-key="' + key + '"]');
      if (!valEl) return;

      var qty = parseInt(valEl.textContent, 10);
      if (btn.classList.contains('cart-item__qty-minus')) {
        qty = Math.max(0, qty - 1);
      } else {
        qty = qty + 1;
      }
      updateCart(key, qty);
    });

    /* ---- Remove button ---- */
    section.addEventListener('click', function(e) {
      var btn = e.target.closest('.cart-item__remove');
      if (!btn) return;
      updateCart(btn.dataset.key, 0);
    });

    function updateCart(key, qty) {
      fetch('/cart/change.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: key, quantity: qty })
      })
      .then(function(r) { return r.json(); })
      .then(function(cart) {
        if (cart.item_count === 0) {
          location.reload();
          return;
        }
        var item = cart.items.find(function(i) { return i.key === key; });
        var row = section.querySelector('.cart-item[data-key="' + key + '"]');
        if (!item && row) {
          row.remove();
        } else if (item && row) {
          row.querySelector('.cart-item__qty-val').textContent = item.quantity;
          row.querySelector('.cart-item__line-price').textContent = formatMoney(item.final_line_price);
        }
        var totalEl = document.getElementById('cartTotal');
        if (totalEl) totalEl.textContent = formatMoney(cart.total_price);
        var countEl = document.getElementById('cartItemCount');
        if (countEl) countEl.textContent = cart.item_count;
        updateShippingBar(cart.total_price);
        document.dispatchEvent(new CustomEvent('cart:updated', { detail: cart }));
      });
    }

    function formatMoney(cents) {
      var amount = (cents / 100).toFixed(2);
      return 'Rs. ' + amount.replace(/\B(?=(\d{3})+(?!\d))/g, ',');
    }

    function updateShippingBar(totalCents) {
      var total = totalCents / 100;
      var remaining = freeShipThreshold - total;
      if (remaining < 0) remaining = 0;
      var progress = Math.min((total / freeShipThreshold) * 100, 100);
      var msgEl = document.getElementById('cartProgressMsg');
      var fillEl = document.getElementById('cartProgressFill');
      if (msgEl) {
        if (remaining > 0) {
          msgEl.innerHTML = 'Spend <span style="color:#008000;"><strong>' + formatMoney(remaining * 100) + '</strong></span> more to reach free shipping!';
        } else {
          msgEl.innerHTML = 'You\'ve unlocked <strong>FREE shipping!</strong>';
        }
      }
      if (fillEl) fillEl.style.width = progress + '%';
    }

    /* ---- Accordion toggles ---- */
    var noteToggle = document.getElementById('cartNoteToggle');
    var notePanel = document.getElementById('cartNotePanel');
    var couponToggle = document.getElementById('cartCouponToggle');
    var couponPanel = document.getElementById('cartCouponPanel');

    if (noteToggle && notePanel) {
      noteToggle.addEventListener('click', function() {
        var open = noteToggle.getAttribute('aria-expanded') === 'true';
        noteToggle.setAttribute('aria-expanded', !open);
        notePanel.style.display = open ? 'none' : 'block';
      });
    }
    if (couponToggle && couponPanel) {
      couponToggle.addEventListener('click', function() {
        var open = couponToggle.getAttribute('aria-expanded') === 'true';
        couponToggle.setAttribute('aria-expanded', !open);
        couponPanel.style.display = open ? 'none' : 'block';
      });
    }

    /* ---- Save note ---- */
    var noteSave = document.getElementById('cartNoteSave');
    var noteInput = document.getElementById('cartNoteInput');
    if (noteSave && noteInput) {
      noteSave.addEventListener('click', function() {
        fetch('/cart/update.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ note: noteInput.value })
        });
      });
    }

    /* ---- Coupon apply (stored for checkout) ---- */
    var couponApply = document.getElementById('cartCouponApply');
    var couponInput = document.getElementById('cartCouponInput');
    var couponMsg = document.getElementById('cartCouponMsg');
    if (couponApply && couponInput) {
      couponApply.addEventListener('click', function() {
        var code = couponInput.value.trim();
        if (!code) return;
        if (couponMsg) {
          couponMsg.textContent = 'Code "' + code + '" will be applied at checkout.';
          couponMsg.style.color = '#008000';
        }
      });
    }
  })();
{% endjavascript %}

